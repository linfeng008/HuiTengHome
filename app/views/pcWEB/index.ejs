<script>
    $('#brandBox a').mouseover(function () {
        this.style.position = 'absolute';
        this.style.zIndex = 9999;
        this.style.top= -5+"px";
        this.style.left= -5+"px";
        $(this).animate({
            width: '100%',
            height: 110
        }, 100);
    }).mouseout(function () {
        this.style.position = 'absolute';
        this.style.zIndex = 0;
        this.style.top= 0+"px";
        this.style.left= 0+"px";
        $(this).animate({
            width: 278,
            height: 100
        }, 100);
    });
</script>
<script>
    //产品介绍，，
    var imgArrBak = ['customer_bak.png', 'customerFollow_bak.png', 'location_bak.png', 'approval_bak.png', 'productOrder_bak.png', 'wechatRemind_bak.png'];
    var imgArr = ['customer.png', 'customerFollow.png', 'location.png', 'approval.png', 'productOrder.png', 'wechatRemind.png'];

    var obj = document.getElementById('product');
    var obja = obj.getElementsByTagName('a');
    for (var i = 0; i < obja.length; i++) {
        obja[i].index = i;
        obja[i].onmousemove = function () {
            this.getElementsByTagName('img')[0].src = '/images/index/' + imgArrBak[this.index];
        };
        obja[i].onmouseout = function () {
            this.getElementsByTagName('img')[0].src = '/images/index/' + imgArr[this.index];
        };
    }
</script>
