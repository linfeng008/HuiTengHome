<%- include header %>
<%- include nav %>
<%- include side %>

<input type="hidden" id="active" value="1"/>
<div class="col-xs-10">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3>参加活动人员列表</h3>
        </div>
        <div class="panel-body noPadding">
            <% if(postData){ %>
            <% var ai = postData.length %>
            <table class="table  table-bordered table-hover">
                <thead>
                <tr class="info">
                    <th>选择</th>
                    <th>编号</th>
                    <th>姓名</th>
                    <th>电话</th>
                    <th>时间</th>
                </tr>
                </thead>
                <tbody>
                <% postData.forEach(function(item, i){ %>
                    <tr>
                        <td><input type="checkbox"/></td>
                        <td><%= i + 1 %></td>
                        <td><%= item.name %></td>
                        <td><a href="tel:<%= item.tel %>"><%= item.tel %></a></td>
                        <td>
                            <% var d = new Date(item.meta.createAt) %>
                            <%= d.getFullYear() + "-" + (d.getMonth() + 1) + "-" + d.getDate() + "  " + d.toLocaleTimeString() %>
                        </td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
            <div>
                <div class="col-md-2">
                    <a class="btn btn-default btn-sm">全选</a>
                    <a class="btn btn-default btn-sm">领取</a>
                    <a class="btn btn-default btn-sm">删除</a>
                </div>
                <div class="col-md-10 text-center">
                    <nav>
                        <ul class="pagination pagination-sm" id="pages" style="padding:0; margin: 0;">
                                <li class="disabled"><a href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                            <% for(var i = 1; i < postPages; i++){ %>
                                <% if(postPage == i){ %>
                                    <li class="active"><a href="/admin/activityList/<%= i %>"><%= i%> <span class="sr-only"><%= i%></span></a></li>
                                <% }else{ %>
                                    <li><a href="/admin/activityList/<%= i %>"><%= i %></a></li>
                                <% } %>
                            <%}%>
                            <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
            <% }else{ %>
            <p>没有数据</p>
            <% } %>
        </div>
    </div>
</div>
<%- include resource %>
<script>
    console.log($('#pages').html());
</script>
<%- include footer %>