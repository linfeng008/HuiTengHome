<%- include header %>
<%- include nav %>

<div class="container" style="margin-top: 60px;">
    <div class="well">
        <h1>hello welcome!</h1>
    </div>
    <div class="form-group">
        <label>email:</label>
        <input type="email" id="AdminName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>密码:</label>
        <input type="password" id="AdminPassword" class="form-control" onkeydown="key()"/>
    </div>
    <a id="submit" class="btn btn-block btn-success">登录</a>
</div>
<%- include resource %>
<script>
    function sub () {
        var AdminName = $("#AdminName").val(),AdminPassword = $("#AdminPassword").val();

        var Admin = {
            "adminName": AdminName,
            "PassWord": AdminPassword
        };

        $.ajax({
            type: "post",
            url: "/admin/login",
            data: Admin,
            dataType: "json",
            success: function (data) {
                if (data.status == true) {
                    window.location.href = "/admin/home";
                }else{
                    alert(data.info);
                }
            },
            error:function (data) {
                console.log(data);
            }
        });
    }
    $("#submit").on("click",sub);

    function key(){
        if(event.keyCode ==13){
            sub();
        }
    }
</script>
