<%- include header %>
<%- include nav %>

<div class="container" style="margin-top: 60px;">
    <div class="well">
        <h1>hello welcome!</h1>
    </div>
    <div class="form-group">
        <label>email:</label>
        <input type="email" id="AdminName" class="form-control"/>
    </div>
    <div class="form-group">
        <label>密码:</label>
        <input type="password" id="AdminPassword" class="form-control"/>
    </div>
    <div class="form-group">
        <label>重新输入密码:</label>
        <input type="password" id="reAdminPassword" class="form-control"/>
    </div>
    <a id="submit" class="btn btn-block btn-success">注册</a>
</div>
<%- include resource %>
<script>
    $("#submit").on("click", function() {
        var AdminName = $("#AdminName").val(),
            AdminPassword = $("#AdminPassword").val(),
            reAdminPassword = $("#reAdminPassword").val();

        if(AdminPassword !== reAdminPassword){
            alert('两次输入的密码不一致！');
        }else{
            var Admin = {
                "adminName": AdminName,
                "PassWord": AdminPassword
            };
            $.ajax({
                type: "post",
                url: "/admin/register",
                data: Admin,
                dataType: "json",
                success: function(data) {
                    if(data.status ==true){
                        alert(data.info);
                        window.location.href = "/admin/login";
                    }else{
                        alert(data.info);
                    }
                },
                error: function(data) {
                    console.log(data);
                }
            });
        }
    });
</script>
